<% include header %>
<h2>Update Entry</h2>
<form method="post" role="form" action="/edit/<%= data.id %>">
<div class="form-group">
<label for="title">Title</label>
<input type="hidden" value="<%= data.id %>" name="id"/>;
<input type="text" class="form-control" id="title" value="<%= data.title %>" name="title" placeholder="Entry title" required>
</div>
<div class="form-group">
<label for="content">Entry text</label>
<textarea class="form-control" id="body" name="body" placeholder="Enter body." rows="3" required ><%= data.body %></textarea></div>
<div class="form-group">
<input type="submit" value="Update entry" class="btn btn-primary">
</div>
</form>
<% include footer %>